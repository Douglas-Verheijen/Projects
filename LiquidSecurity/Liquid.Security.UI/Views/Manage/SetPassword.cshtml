@model Liquid.Security.UI.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<div class="page-content">
    <div class="product-info-wrapper">
        <div class="col">
            <div class="product-info">
                <div class="product-info-heading">@ViewBag.Title</div>
                <div class="product-info-content">
                    <div class="contact-wrapper">
                        <div class="product-info-subheading">
                            You do not have a local username/password for this site. Add a local
                            account so you can log in without an external login.
                        </div>
                        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <span class="form-control-label">@Html.LabelFor(m => m.NewPassword):</span>
                                <span class="form-control">@Html.PasswordFor(m => m.NewPassword)</span>
                            </div>
                            <div class="form-group">
                                <span class="form-control-label">@Html.LabelFor(m => m.ConfirmPassword):</span>
                                <span class="form-control">@Html.PasswordFor(m => m.ConfirmPassword)</span>
                            </div>                        
                            <div class="form-group">
                                <span class="form-submit">
                                    <input type="submit" value="Log in" />
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
