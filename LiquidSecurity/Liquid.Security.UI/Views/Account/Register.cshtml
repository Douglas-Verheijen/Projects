@model Liquid.Security.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="page-content">
    <div class="product-info-wrapper">
        <div class="col">
            <div class="product-info">
                <div class="product-info-heading">Register</div>
                <div class="product-info-content">
                    <div class="contact-wrapper">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            <div class="product-info-subheading">Create a new account.</div>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <span class="form-control-label">@Html.LabelFor(m => m.Email):</span>
                                <span class="form-control">@Html.TextBoxFor(m => m.Email)</span>
                            </div>
                            <div class="form-group">
                                <span class="form-control-label">@Html.LabelFor(m => m.Password):</span>
                                <span class="form-control">@Html.PasswordFor(m => m.Password)</span>
                            </div>
                            <div class="form-group">
                                <span class="form-control-label">@Html.LabelFor(m => m.ConfirmPassword):</span>
                                <span class="form-control">@Html.PasswordFor(m => m.ConfirmPassword)</span>
                            </div>
                            <div class="form-group">
                                <span class="form-submit">
                                    <input type="submit" value="Log in" />
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
